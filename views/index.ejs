<!DOCTYPE html>
<html>
  <head>
    <title><%= title %></title>
    <link rel='stylesheet' href='/stylesheets/style.css' />
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
  
  </head>
  <body>
    <h1><%= title %></h1>
    <p>Welcome to <%= title %></p>

    <a href="/delete/10" class="btn btn-danger" onclick="return confirm('Estas seguro?')">Eliminar (Alert)</a>
    
    <a href="#" class="btn btn-danger" onclick="confirmar(10)">Eliminar (Sweet Alert)</a>

    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11.7.1/dist/sweetalert2.all.min.js"></script>

    <script>
      function confirmar(id){
        Swal.fire({
          title: 'Estas seguro?',
          text: "No puedes revertir la acción",
          icon: 'warning',
          confirmButtonColor: '#3085d6',
          confirmButtonText: 'Continuar',
          showCancelButton: true,
          cancelButtonColor: '#d33',
          cancelButtonText: 'Cancelar'
        }).then((result) => {
          if (result.isConfirmed) {
            Swal.fire(
              'Has decidido continuar!',
              'Se ha borrado el elemento',
              'success'
            )
            window.setTimeout(() =>{
                location="/delete/"+id
              }, 2000
            )
          }else{
            Swal.fire(
              'Has cancelado la acción!',
              'Se ha candelado la acción',
              'info'
            )
          }
        })
      }
    </script>


  </body>
</html>
